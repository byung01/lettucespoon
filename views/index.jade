doctype html

mixin carousel(id, items)
    .carousel.slide(id='carousel-#{id}', data-ride='carousel')
        //- Indicators
        ol.carousel-indicators
            each item,index in items
                if (index === 0)
                    li.active(data-target="#carousel-#{id}", data-slide-to="#{index}")
                else
                    li(data-target="#carousel-#{id}", data-slide-to="#{index}")
        //- Wrapper for slides
        .carousel-inner(role="listbox")
            each item,index in items
                if (index === 0)
                    .item.active
                        img(src="#{item.image}", alt="Food image")
                else
                    .item
                        img(src="#{item.image}", alt="Food image")
            //- Adding arrows to navigate through photo carousel
            a.left.carousel-control(href='#carousel-photoroll', role='button', data-slide='prev')
                span.glyphicon.glyphicon-chevron-left
            a.right.carousel-control(href='#carousel-photoroll', role='button', data-slide='next')
                span.glyphicon.glyphicon-chevron-right

html(lang="en")
    head
        include _includes/header.jade
        title LettuceSpoon
    body
        //- Including Navbar template
        include _includes/navbar.jade

        main.animsition(role="main")
            .view.photos(id="home")
                +carousel("photoroll",[
                    {image: "images/clementine.jpg"},
